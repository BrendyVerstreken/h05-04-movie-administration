@model ActorsIndexViewModel


<h2>Actors</h2>
<table class="table table-condensed table-hover table-responsive">
    <tr>
        <th>Name</th>
        <th colspan="2">Action</th>
    </tr>
    @for(int i=0;i<Model.Names.Count;i++)
    {
<tr>
    <td>@Model.Names[i]</td>
    <td>
        <a asp-controller="Actors"
           asp-action="Edit"
           asp-route-Id="@Model.Ids[i]" class="btn btn-primary">Edit</a>
    </td>
    <td>
        <a asp-controller="Actors"
           asp-action="ConfirmDelete"
           asp-route-Id="@Model.Ids[i]" class="btn btn-danger">Delete</a>
    </td>
</tr>
    }
</table>
<div class="row">
    <a asp-controller="Actors"
       asp-action="Add" class="btn btn-outline-primary">Add</a>
</div>